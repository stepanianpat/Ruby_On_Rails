<h1>User index</h1>

<% content_for :left do%>
  <h2>All <%= @user.count %> Users</h2>
  <table>
    <tr>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Favorite Language</th>
    </tr>

    <% @user.each do |user| %>
    <tr>
      <td><%= user.first_name %></td>
      <td><%= user.last_name %></td>
      <td><%= user.favorite_language %></td>
    </tr>
    <% end %>
  </table>
<% end %>

<% content_for :right do%>
  <h2>New User</h2>
  <form action="/users" method="post">
    <h4>First Name</h4>
    <input type="text" name="user[first_name]" cols="60">
    <h4>Last Name</h4>
    <input type="text" name="user[last_name]" value="">
    <h4>Favorite Language</h4>
    <input type="text" name="user[favorite_language]" value="">
    <br>
    <button id="submit" >Submit</button>
  </form>

  <h4 id="all"><a href="/posts/index">All Posts</a></h4>
<% end %>
