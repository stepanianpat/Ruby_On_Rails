<h1 style="display:inline-block"> <%= @dojo.branch %> Dojo </h1>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;<a href="/dojos/<%= @dojo.id%>/edit">Edit</a>

<% if flash[:notice]%>
  <h3 style="color:green"><% flash[:notice] %></h3>
<% end %>

<h3>Address: <%= @dojo.street %></h3>
<h3>City: <%=@dojo.city %></h3>

<h2>Student Roster</h2>
<table>
  <tr>
    <th>First Name</th>
    <th>Last Name</th>
    <th>Email</th>
    <th>Action</th>
  </tr>
  <% @dojo.students.each do |student|%>
  <tr>
    <td><%= student.first_name %></td>
    <td><%= student.last_name %></td>
    <td><%= student.email %></td>
    <td>
      <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>">Show</a> |
      <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>/edit">Edit</a> |
      <a href="/dojos/<%= @dojo.id %>/students/<%= student.id %>" data-method="delete" data-confirm="Are You Sure?">Destroy</a></td>
    </td>
  </tr>
  <% end %>
</table>
<h4><a href="/goback">Home</a> | <a href="/dojos/<%= @dojo.id%>/students/new">Add Student</a></h4>
